generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum TransactionType {
  expense 
  income
}

enum TransactionStatus {
  paid
  pending
}

enum SubscriptionFrequency {
  weekly
  monthly
  yearly
}

model Category {
  id        String        @id @default(uuid())
  userId    String        @map("user_id")
  name      String
  icon      String?
  transactions Transaction[]
  subscriptions Subscription[]
  budgets   Budget[]

  @@unique([userId, name])
  @@map("categories")
}

model Transaction {
  id           String            @id @default(uuid())
  userId       String            @map("user_id")
  amount       Decimal           @db.Decimal(10, 2)
  description  String
  category     String
  type         TransactionType   @default(expense)
  status       TransactionStatus @default(paid)
  dueDate      DateTime?         @map("due_date") @db.Date
  paymentDate  DateTime?         @map("payment_date") @db.Date
  rawText      String?           @map("raw_text")
  
  // Campos para anexo único (recibo)
  attachmentKey       String?  @map("attachment_key")        // Caminho no R2 (ex: receipts/uuid.jpg)
  attachmentOriginalName String? @map("attachment_original_name") // Nome original do arquivo
  attachmentMimeType  String?  @map("attachment_mime_type")   // MIME type
  attachmentSize      Int?     @map("attachment_size")        // Tamanho em bytes
  
  createdAt    DateTime          @default(now()) @map("created_at")

  categoryName String    @map("category_name")
  
  categoryId   String?   @map("category_id")
  categoryRel  Category? @relation(fields: [categoryId], references: [id])

  creditCardId String?       @map("credit_card_id")
  creditCard   CreditCard?   @relation(fields: [creditCardId], references: [id])

  attachments  Attachment[]

  @@map("transactions")
}

model Subscription {
  id          String               @id @default(uuid())
  userId      String               @map("user_id")
  description String
  amount      Decimal              @db.Decimal(10, 2)
  categoryId  String               @map("category_id")
  category    Category             @relation(fields: [categoryId], references: [id])
  frequency   SubscriptionFrequency
  dayOfMonth  Int?
  dayOfWeek   Int?
  month       Int?                 
  isActive    Boolean              @default(true)
  createdAt   DateTime             @default(now()) @map("created_at")

  creditCardId String?       @map("credit_card_id")
  creditCard   CreditCard?   @relation(fields: [creditCardId], references: [id])

  attachments  Attachment[]

  @@map("subscriptions")
}

model Budget {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  categoryId String   @map("category_id")
  category   Category @relation(fields: [categoryId], references: [id])
  amount     Decimal  @db.Decimal(10, 2)
  month      Int
  year       Int 
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@unique([userId, categoryId, month, year])
  @@map("budgets")
}

enum NotificationType {
  due_date
  budget_limit
  payment_reminder
  subscription_renewal
  general
}

enum NotificationStatus {
  unread
  read
}

model Notification {
  id         String             @id @default(uuid())
  userId     String             @map("user_id")
  title      String
  message    String
  type       NotificationType   @default(general)
  status     NotificationStatus @default(unread)
  relatedId  String?            @map("related_id")
  createdAt  DateTime           @default(now()) @map("created_at")
  readAt     DateTime?          @map("read_at")

  @@map("notifications")
}

enum CreditCardFlag {
  visa
  mastercard
  american_express
  elo
  hipercard
  other
}

enum CreditCardStatus {
  active
  blocked
  expired
  cancelled
}

model CreditCard {
  id              String           @id @default(uuid())
  userId          String           @map("user_id")
  name            String           // Nome personalizado do cartão
  flag            CreditCardFlag   // Bandeira
  lastFourDigits  String           @map("last_four_digits") // Últimos 4 dígitos
  limit           Decimal          @db.Decimal(10, 2) // Limite do cartão
  availableLimit  Decimal          @db.Decimal(10, 2) @map("available_limit") // Limite disponível
  closingDay      Int              @map("closing_day") // Dia do fechamento (1-31)
  dueDay          Int              @map("due_day") // Dia do vencimento (1-31)
  status          CreditCardStatus @default(active)
  createdAt       DateTime         @default(now()) @map("created_at")
  updatedAt       DateTime         @updatedAt @map("updated_at")

  transactions    Transaction[]
  subscriptions   Subscription[]

  @@map("credit_cards")
}

enum AttachmentType {
  pdf
  image
  document
}

model Attachment {
  id             String         @id @default(uuid())
  userId         String         @map("user_id")
  fileName       String         @map("file_name")
  originalName   String         @map("original_name")
  fileSize       Int            @map("file_size") // Tamanho em bytes
  mimeType       String         @map("mime_type")
  type           AttachmentType
  storageUrl     String         @map("storage_url") // URL ou path do arquivo
  description    String?
  
  // Relacionamentos polimórficos
  transactionId  String?        @map("transaction_id")
  transaction    Transaction?   @relation(fields: [transactionId], references: [id])

  subscriptionId String?        @map("subscription_id")
  subscription   Subscription?  @relation(fields: [subscriptionId], references: [id])
  
  createdAt      DateTime       @default(now()) @map("created_at")
  updatedAt      DateTime       @updatedAt @map("updated_at")

  @@map("attachments")
}